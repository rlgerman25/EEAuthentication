
<% include partials/header.ejs %> 


<div class="container">
    <h1 class="jumbotronheading text-center">Ask a Question</h1>
    <div class="formWidth">   
        <form action="/q&a" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="question" placeholder="Start your question with 'What', 'How', 'Why', etc.">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Optional: include an image for context">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="url" placeholder="Optional: include a link, reference, or description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"> Submit </button>
            </div>
        </form>
        <a href="/q&a">Go Back</a>
    </div>        
</div>


